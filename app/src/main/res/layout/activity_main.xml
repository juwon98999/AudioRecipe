<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainttsbtn">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="15dp"
        tools:context=".MainActivity">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/baner" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/categorypage"
                android:layout_width="176dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/searchimg" />

            <ImageButton
                android:id="@+id/helppage"
                android:layout_width="100dp"
                android:layout_height="63dp"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/helpimg" />

            <ImageButton
                android:id="@+id/mainttsbtn1"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:layout_marginLeft="10dp"
                app:srcCompat="@drawable/sttimg" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:layout_marginTop="10dp">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipChildren="false"
                android:clipToPadding="false" />

            <me.relex.circleindicator.CircleIndicator3
                android:id="@+id/indicator"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_gravity="bottom" />

        </FrameLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="351dp"
                android:layout_height="36dp"
                android:layout_marginLeft="10dp"
                android:text="NEW 레시피"
                android:textSize="30dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp">


            <ImageButton
                android:id="@+id/recipepage1"
                android:layout_width="139dp"
                android:layout_height="189dp"
                android:layout_weight="1"
                android:background="@color/white"
                app:srcCompat="@drawable/kimchiggigae" />

            <EditText
                android:id="@+id/mainttstxt"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="" />

            <ImageButton
                android:id="@+id/recipepage2"
                android:layout_width="139dp"
                android:layout_height="189dp"
                android:layout_weight="1"
                android:layout_marginLeft="40dp"
                android:background="@color/white"
                app:srcCompat="@drawable/remen" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp">


            <TextView
                android:id="@+id/textView3"
                android:layout_width="104dp"
                android:layout_height="36dp"
                android:layout_marginLeft="30dp"
                android:text="김치찌개"
                android:textSize="25dp" />

            <ImageButton
                android:id="@+id/popupbtn1"
                android:layout_width="40dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:background="@color/white"
                app:srcCompat="@drawable/popupimg" />


            <TextView
                android:id="@+id/textView4"
                android:layout_width="54dp"
                android:layout_height="36dp"
                android:layout_marginLeft="70dp"
                android:text="라면"
                android:textSize="25dp" />

            <ImageButton
                android:id="@+id/popupbtn2"
                android:layout_width="40dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:background="@color/white"
                app:srcCompat="@drawable/popupimg" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp">

            <ImageButton
                android:id="@+id/recipepage3"
                android:layout_width="139dp"
                android:layout_height="189dp"
                android:layout_weight="1"
                android:background="@color/white"
                app:srcCompat="@drawable/duruchigiimg" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp">


            <TextView
                android:id="@+id/textView6"
                android:layout_width="104dp"
                android:layout_height="36dp"
                android:layout_marginLeft="30dp"
                android:text="두루치기"
                android:textSize="25dp" />

            <ImageButton
                android:id="@+id/popupbtn3"
                android:layout_width="40dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:background="@color/white"
                app:srcCompat="@drawable/popupimg" />

        </LinearLayout>


    </LinearLayout>

</ScrollView>
